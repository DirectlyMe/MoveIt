<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ListView?>
<BorderPane fx:controller="sample.Controller"
            xmlns:fx="http://javafx.com/fxml">
    <left>
        <GridPane
                  alignment="CENTER" hgap="10" vgap="10"
                  stylesheets="/sample/settings_layout.css">
            <Label
                    text="Activities: "
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="0"/>
            <Label
                    text="Start Times: "
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="1"/>
            <Label
                    text="End Times:"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="2"/>

            <TextField
                    fx:id="mTextFieldUserActivity1"
                    GridPane.rowIndex="1"
                    GridPane.columnIndex="0"/>

            <TextField
                    fx:id="mTextFieldUserActivity2"
                    GridPane.rowIndex="2"
                    GridPane.columnIndex="0"/>
            <TextField
                    fx:id="mTextFieldUserActivity3"
                    GridPane.rowIndex="3"
                    GridPane.columnIndex="0"/>
            <TextField
                    fx:id="mTextFieldActivityStartTime1"
                    GridPane.rowIndex="1"
                    GridPane.columnIndex="1"
            />
            <TextField
                    fx:id="mTextFieldActivityStartTime2"
                    GridPane.rowIndex="2"
                    GridPane.columnIndex="1" />
            <TextField
                    fx:id="mTextFieldActivityStartTime3"
                    GridPane.rowIndex="3"
                    GridPane.columnIndex="1" />
            <TextField
                    fx:id="mTextFieldActivityEndTime1"
                    GridPane.rowIndex="1"
                    GridPane.ColumnIndex="2"/>
            <TextField
                    fx:id="mTextFieldActivityEndTime2"
                    GridPane.rowIndex="2"
                    GridPane.ColumnIndex="2"/>
            <TextField
                    fx:id="mTextFieldActivityEndTime3"
                    GridPane.rowIndex="3"
                    GridPane.ColumnIndex="2"/>

            <Button GridPane.rowIndex="4"
                    text="Save"
                    fx:id="mButtonSave"
                    onAction="#saveUserSettings"/>
        </GridPane>
    </left>
    <center>
        <ListView
        fx:id="mActivityListView"
        />
    </center>
</BorderPane>