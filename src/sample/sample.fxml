<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10"
          stylesheets="/sample/settings_layout.css">
    <Label
            text="Activities: "
            GridPane.rowIndex="0"
            GridPane.columnIndex="0"/>
    <Label
            text="Times: "
            GridPane.rowIndex="0"
            GridPane.columnIndex="1"/>
    <TextField
            fx:id="mTextFieldUserActivity1"
            GridPane.rowIndex="1"
            GridPane.columnIndex="0"/>

    <TextField
            fx:id="mTextFieldUserActivity2"
            GridPane.rowIndex="2"
            GridPane.columnIndex="0"/>
    <TextField
            fx:id="mTextFieldUserActivity3"
            GridPane.rowIndex="3"
            GridPane.columnIndex="0"/>
    <TextField
            fx:id="mTextFieldActivityTime1"
            GridPane.rowIndex="1"
            GridPane.columnIndex="1"
    />
    <TextField
            fx:id="mTextFieldActivityTime2"
            GridPane.rowIndex="2"
            GridPane.columnIndex="1" />
    <TextField
            fx:id="mTextFieldActivityTime3"
            GridPane.rowIndex="3"
            GridPane.columnIndex="1" />

    <Button GridPane.rowIndex="4"
            text="Save"
            fx:id="mButtonSave"
            onAction="#saveUserSettings"/>
</GridPane>